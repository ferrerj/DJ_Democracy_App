<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tester.Home$PlaceholderFragment" >

    <LinearLayout 
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:orientation="horizontal">
	    <ImageView 
	    android:contentDescription="logo"
	    android:id="@+id/logo"
	    android:adjustViewBounds="true"
	    android:layout_height="wrap_content"
		android:layout_width="wrap_content"
	    android:src="@drawable/logo"    
	    android:layout_gravity="left"
	    android:layout_weight=".85"
	    />
	    <ImageView
	    android:contentDescription="menu"
	    android:id="@+id/menu"
	    android:clickable="true"
	    android:adjustViewBounds="true"
	    android:layout_height="wrap_content"
		android:layout_width="wrap_content"
	    android:src="@drawable/menu"    
	    android:layout_gravity="right"
	    android:layout_weight=".15"
	    android:onClick="menu"
	    />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/rowone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="horizontal">
        <ImageView 
        android:contentDescription="artists"
	    android:id="@+id/artist"
	    android:clickable="true"
	    android:adjustViewBounds="true"
	    android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:onClick="loadArtists"
	    android:src="@drawable/artist"    
	    android:layout_gravity="left"
	    android:layout_weight=".5"/>
        <ImageView 
        android:contentDescription="chart"
	    android:id="@+id/chart"
	    android:onClick="loadCharts"
	    android:adjustViewBounds="true"
	    android:layout_height="wrap_content"
		android:layout_width="wrap_content"
	    android:src="@drawable/chart"    
	     android:clickable="true"
	    android:layout_gravity="right"
	    android:layout_weight=".5"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/rowtwo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rowone"
        android:orientation="horizontal">
        
        <ImageView 
        android:contentDescription="search"
	    android:id="@+id/search"
	    android:adjustViewBounds="true"
	    android:clickable="true"
	    android:layout_height="wrap_content"
		android:layout_width="wrap_content"
	    android:src="@drawable/search"    
	    android:onClick="loadSearch"
	    android:layout_gravity="left"
	    android:layout_weight=".5"/>
        <ImageView 
        android:contentDescription="logout"
	    android:id="@+id/logout"
	    android:adjustViewBounds="true"
	    android:clickable="true"
	    android:layout_height="wrap_content"
		android:layout_width="wrap_content"
	    android:src="@drawable/logout"    
	    android:layout_gravity="right"
	    android:onClick="logout"
	    android:layout_weight=".5"/>
    </LinearLayout>


</RelativeLayout>
